@page "{id?/{handler?}"
@model IndexModel
@{
}
<h1>Courses</h1>
@if (Model.Courses.Count > 0)
{
    <form method="post">
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Courses[0].Name)</th>
                <th>@Html.DisplayNameFor(m => m.Courses[0].Level)</th>
                <th>@Html.DisplayNameFor(m => m.Courses[0].Instructor)</th>
                <th>@Html.DisplayNameFor(m => m.Courses[0].Language)</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@Html.DisplayFor(s => course.Name)</td>
                    <td>@Html.DisplayFor(s => course.Level)</td>
                    <td>@Html.DisplayFor(s => course.Instructor)</td>
                    <td>@Html.DisplayFor(s => course.Language)</td>
                    <td><button asp-page-handler="Delete" asp-route-id="@course.Id">Delete</button> </td>
                </tr>
            }
        </tbody>
    </table>
    </form>
}
else
{
    <p>There are no Course Planned</p>

}

<a asp-page="Create">Add Course</a>