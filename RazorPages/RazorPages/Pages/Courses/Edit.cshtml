@page
@model EditModel
@{
}
<h1>Edit Course</h1>
<br />
<form method="post">
    <div class="form-group">
        <label asp-for="Course.Name"></label>
        <input asp-for="Course.Name" />
        <span asp-validation-for="Course.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Instructor"></label>
        <input asp-for="Course.Instructor" />
        <span asp-validation-for="Course.Instructor"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Language"></label>
        <input asp-for="Course.Language" />
        <span asp-validation-for="Course.Language"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Level"></label>
        <input asp-for="Course.Level" />
        <span asp-validation-for="Course.Level"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="Index" class="btn btn-danger">Cancel</a>
</form>